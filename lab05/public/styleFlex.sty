/*List of variables*/
margin  = 0px
border = 2px solid #cccc33
font-style = "Helvetica"

/*Start formatting */
body
  font font-style, 24px 
  background: #999999

 #main
  min-height: 800px
  margin margin
  padding: 0px
  display: flex
  Flex-flow: row
  
  article 
   margin margin
   padding: 7px
   border border
   border-radius: 0pt
   background: #dddd88
   flex: 3 1 60%
   order: 2

/*text align edited here to make it aligned on the right when screen is wide*/
  nav 
   margin margin
   padding: 7px
   border: 1px solid #8888bb
   border-radius: 0pt
   background: #ccccff
   flex: 1 6 20%
   order: 1
   text-align: right
  
  aside 
   margin margin
   padding: 7px
   border: 1px solid #8888bb
   border-radius: 0pt
   background: #ccccff
   flex: 1 6 20%
   order: 3

 header
  font: 30px Helvetica

 header, footer
  font-style: bold
  display: block
  margin margin
  padding: 7px
  min-height: 50px
  border: 1px solid #eebb55
  border-radius: 0pt
  background: #ffeebb

/* Too narrow to support three columns */
/*Variables edited here affects the display when small screen is used*/
 @media all and (max-width: 640px) 
  #main, #page 
   flex-direction: column     

  #main > article, #main > nav, #main > aside 
  /* Return them to document order */
   order: 0
          
  #main > nav, #main > aside, header, footer 
    text-align: left
    min-height: 50px
    max-height: 75px